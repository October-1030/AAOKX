{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "lib/defi", "lib/_defi", "lib/enhanced", "lib/mev", "lib/_enhanced", "lib/_mev", "lib/ml", "lib/advanced", "lib/strategies", "test-*.ts", "*_TEST.ts", "ULTIMATE_*.ts", "close-all-positions.ts", "force-close-eth.ts"]
}
